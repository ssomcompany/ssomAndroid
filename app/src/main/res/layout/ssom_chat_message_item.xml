<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/receive_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <!-- left profile image layout Start -->
        <FrameLayout
            android:id="@+id/chat_profile_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentLeft="true">

            <com.ssomcompany.ssomclient.widget.CircularNetworkImageView
                android:id="@+id/chat_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/chat_profile_circle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chat_profile_border_red" />
        </FrameLayout>

        <!-- left profile image layout End -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/chat_profile_layout"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/receive_message"
                style="@style/ssom_font_12_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="290dp"
                android:lineSpacingExtra="5sp"
                android:padding="10dp"
                android:background="@drawable/bg_receive_message_red"/>

            <TextView
                android:id="@+id/receive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/send_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/send_message"
            style="@style/ssom_font_12_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxWidth="290dp"
            android:lineSpacingExtra="5sp"
            android:padding="10dp"
            android:background="@drawable/bg_send_message"/>

        <TextView
            android:id="@+id/send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/initial_message"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fcfcfc"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/ssom_font_12_red_pink_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/chat_message_initial_first" />

        <TextView
            style="@style/ssom_font_12_pinkish_gray_two_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/chat_message_initial_second" />
    </LinearLayout>

    <TextView
        android:id="@+id/finish_message"
        style="@style/ssom_font_12_red_pink_single"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="#fcfcfc"
        android:text="@string/chat_message_finish"
        android:visibility="gone"/>
</RelativeLayout>