<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.ssomcompany.ssomclient.FilterFragment"
    android:background="#55000000">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_filter_white"
        android:paddingBottom="12dp"
        >
        <ImageView
            android:id="@+id/filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_filter_type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:id="@+id/filter_ssom_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_title"
            android:layout_marginTop="26dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/toggle_filter_bg_g">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_filter_all">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모두"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_filter_toggle_g"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_filter_2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내가 쏨"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_filter_toggle_g"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_filter_3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="니가 쏴"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_layout_user_count"
            android:layout_below="@id/filter_ssom_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#e70033"
                android:text="2~3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=" 명이 한 팀 이었으면 좋겠어요"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/filter_seekbar_user_count"
            android:layout_below="@id/filter_layout_user_count"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/filter_layout_age_range"
            android:layout_below="@id/filter_seekbar_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/filter_text_age_ragne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#e70033"
                android:text="25~26"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=" 살 이었으면 좋겠어요"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/filter_seekbar_age_range"
            android:layout_below="@id/filter_layout_age_range"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:id="@+id/filter_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_filter_ok_b"
            android:layout_below="@id/filter_seekbar_age_range"
            android:layout_marginTop="42dp"
            android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="19sp"
            android:textColor="#ffffff"
            android:text="적용하기"/>
        </RelativeLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/filter_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bg_filter_cancel_b"/>

</RelativeLayout>
