<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!-- left profile image layout Start -->
    <FrameLayout
        android:id="@+id/profile_layout"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true">

        <com.ssomcompany.ssomclient.widget.CircularNetworkImageView
            android:id="@+id/icon_list_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="1dp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/icon_ing"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="1dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/icon_list_r"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/list_green_border" />

        <ImageView
            android:id="@+id/icon_list_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:src="@drawable/list_mark_green"/>
    </FrameLayout>

    <!-- left profile image layout End -->

    <!-- Contents layout Start -->
    <LinearLayout
        android:id="@+id/item_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.5dp"
        android:layout_marginRight="13.5dp"
        android:layout_marginLeft="13.5dp"
        android:layout_toRightOf="@id/profile_layout">

        <TextView
            android:id="@+id/post_item_title"
            style="@style/ssom_font_12_red_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/post_item_time"
            style="@style/ssom_font_9_pinkish_gray_single"
            android:layout_width="45.3dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/post_item_distance"
            style="@style/ssom_font_12_pinkish_gray_single"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/content"
        style="@style/ssom_font_12_main_black_2_lines"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="5.8dp"
        android:layout_marginLeft="13.5dp"
        android:layout_marginRight="32dp"
        android:layout_below="@id/item_info"
        android:layout_toRightOf="@id/profile_layout"
        />

    <!-- Contents layout End -->

    <!-- onChat layout Start

    <ImageView
        android:id="@+id/chat_on_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_chat"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대화중"
        android:textSize="10sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="15dp"/>

     onChat layout End -->

</RelativeLayout>