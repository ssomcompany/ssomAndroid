<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:minHeight="94dp"
    >

    <ImageView
        android:id="@+id/icon_list_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_list_st_r"
        android:layout_marginLeft="8dp"/>
    <ImageView
        android:id="@+id/icon_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_rice_st_b"
        />
    <TextView
        android:id="@+id/content"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"
        android:textSize="16sp"
        android:lines="3"
        />
    <TextView
        android:id="@+id/info"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="90dp"
        android:textSize="13sp"
        android:lines="1"
        android:text="방금전 , 21~25살 4명 있어요, 300m"/>
    <ImageView
        android:id="@+id/chat_on_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_chat_on"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대화중"
        android:textColor="@android:color/holo_red_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="15dp"/>
</RelativeLayout>