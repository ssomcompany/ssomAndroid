<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ssomcompany.ssomclient.WriteActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/title_wirte_type" />

    <ImageView
        android:id="@+id/write_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="92dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/icon_wirte_photo_emp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="89dp"
        android:src="@drawable/icon_wirte_st_b" />

    <ImageView
        android:id="@+id/write_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="185dp"
        android:src="@drawable/icon_wirte_photo" />

    <ImageView
        android:id="@+id/targetbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="128dp"
        android:src="@drawable/toggle_write_bg_w" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/targetbackground"
        android:layout_alignTop="@id/targetbackground"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/toggle_write_black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/targetbackground"
        android:layout_alignTop="@id/targetbackground"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/icon_check_w" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/targetbackground"
        android:layout_alignLeft="@id/targetbackground"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:src="@drawable/toggle_write_red" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/targetbackground"
        android:layout_alignLeft="@id/targetbackground"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="19dp"
        android:src="@drawable/icon_target_w" />
    //밥, 술 차 아무거나
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d3d3d3"
        android:layout_marginTop="248dp">
    <ImageView
        android:id="@+id/category_rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:src="@drawable/icon_rice_dis" />
    <ImageView
        android:id="@+id/category_coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_cof_dis"
        android:layout_marginLeft="95.5dp"
        />
    <ImageView
        android:id="@+id/category_beer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_beer_dis"
        android:layout_marginLeft="184dp"
        />
    <ImageView
        android:id="@+id/category_any"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_all_perss"
        android:layout_marginLeft="272.5dp"
        />
    </RelativeLayout>
    //카테고리 끝
    <EditText
        android:id="@+id/message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="318dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="함께 하고 싶은 아이템을 고르고\n나를 어필할수있는\n한 마디를 남겨보세요!"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:text="2 명이 기다리고 있어요."
    android:layout_centerHorizontal="true"
    android:layout_marginTop="409dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="나이는 25 ~ 26 살 이에요"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="477dp"/>
    <ImageView
        android:id="@+id/btn_write_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="108dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/btn_write_ok" />

    <ImageView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="275dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/btn_write_cancle" />
</RelativeLayout>
